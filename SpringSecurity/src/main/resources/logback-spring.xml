<configuration>
    <springProperty scope="context" name="LOG_PATH" source="logging.file.path" defaultValue="./logs"/>

    <!-- System log -->
    <appender name="SYSTEM_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/system.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/system-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- App log -->
    <appender name="APP_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} [traceId=%X{traceId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- System logs (Spring, Hibernate, Tomcat, ...) -->
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="SYSTEM_LOG"/>
    </logger>
    <logger name="org.hibernate" level="INFO" additivity="false">
        <appender-ref ref="SYSTEM_LOG"/>
    </logger>
    <logger name="org.apache" level="INFO" additivity="false">
        <appender-ref ref="SYSTEM_LOG"/>
    </logger>

    <!-- App logs (your business code) -->
    <logger name="com.example" level="DEBUG" additivity="false">
        <appender-ref ref="APP_LOG"/>
    </logger>

    <!-- Root: chỉ nên log hệ thống để tránh ghi trùng -->
    <root level="INFO">
        <appender-ref ref="SYSTEM_LOG"/>
    </root>
</configuration>
